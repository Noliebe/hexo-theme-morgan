#footer
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 52px
  white-space: nowrap;
  flex-wrap: wrap;
  background: var(--card-background)
  // font-size: 16px
  font-size: 12px;
  font-weight: medium
  color: var(--neut-L50)
  margin: 0 auto
  border-radius: card-radius card-radius 0 0
  box-sizing: border-box;
  padding: 0 20px
  align-items: center
  transition: background trans-style, color trans-style
  a
    @extend $text-link

#footer-info
  display: flex;
  justify-content: space-between;
  width: 100%;
  white-space: nowrap;
  flex-wrap: wrap;
  align-items: center

@media screen and (max-width 768px) {
