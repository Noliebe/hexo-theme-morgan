<footer id="footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>
  <div id="footer-info" class="inner">
    <div>&copy; <%= date(new Date(), 'YYYY') %> <%= theme.author || config.author || config.title %></div>
    <% if (theme.copyright){ %>
      <%- render(theme.copyright, 'pug'); %>
    <% } %>
    <div>
      Thanks for <a href="https://hexo.io/" target="_blank">Hexo</a> & Theme <a href="https://github.com/saicaca/hexo-theme-vivia">Vivia</a>
    </div>
  </div>
</footer>
